<div class="container-fluid SignUpBackground">
  <div class="col-md-5 col-md-offset-4 FormLayout">
    <div class="container-fluid FormTopBar">
       <%= link_to image_tag("Logo.png", class:"navbar-logo"), root_path %>
    </div><!-- FormTopBar-->

    <h3>Sign into your account</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field FieldContainer">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "FormField" %>
      </div>

      <div class="field FieldContainer">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "FormField" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "SIGN IN", class: "btn FormButton"%>
      </div>
    <% end %>

<%= render "devise/shared/links" %>
  </div><!-- FormLayout-->
</div><!-- container-fluid SignUpBackground" -->
